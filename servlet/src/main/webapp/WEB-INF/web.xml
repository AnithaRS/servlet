<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
 
    
<welcome-file-list>
<welcome-file>number.html</welcome-file>
</welcome-file-list>


  <context-param>
             <param-name>URL</param-name>
               <param-value>jdbc:mysql://localhost:3307/jee</param-value>
</context-param>

<context-param>
           <param-name>USER</param-name>
            <param-value>root</param-value>
</context-param>

<context-param>
          <param-name>PSWD</param-name>
           <param-value>admin</param-value>
</context-param>



<servlet>
<servlet-name>Serv</servlet-name>
<servlet-class>configContext.Exmp</servlet-class>

</servlet>

<servlet-mapping>
<servlet-name>Serv</servlet-name>
<url-pattern>/login</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>Serv1</servlet-name>
<servlet-class>configContext.Drive</servlet-class>
</servlet>

<servlet-mapping>
<servlet-name>Serv1</servlet-name>
<url-pattern>/drive</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>Serv2</servlet-name>
<servlet-class>configContext.Eligible</servlet-class>

</servlet>

<servlet-mapping>
<servlet-name>Serv2</servlet-name>
<url-pattern>/eligible</url-pattern>
</servlet-mapping>


</web-app>